<Window x:Class="WPF_FirstApp.PhoneBookGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhoneBookGUI" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="41,32,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Height="23" Margin="41,60,0,0" TextWrapping="Wrap" Text="Number" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="86,88,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="175,31,0,0" VerticalAlignment="Top" Width="75" Click="btnSearch_Click"/>
        <ListBox x:Name="listPhoneBook" HorizontalAlignment="Left" Height="138" Margin="41,121,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
